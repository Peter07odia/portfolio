{
  "version": 2,
  "builds": [
    {
      "src": "./index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.py"
    }
  ],
  "functions": {
    "index.py": {
      "excludeFiles": [
        "static/images/ai-gallery/**",
        "static/images/homify-screens/**", 
        "static/images/project-carousel/**",
        "static/images/smart-gold-screenshots/**",
        "mcp-vercel/**",
        "attached_assets/**",
        "__pycache__/**",
        "*.md",
        "test_*.py",
        "*.cache/**",
        ".git/**"
      ]
    }
  }
} 